<Page x:Class="SportTrain.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportTrain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Loaded="LoginPage_Loaded">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Логин: "/>
                <TextBox Name="TBoxLogin"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пароль: "/>
                <PasswordBox Name="PBoxPassword"/>
            </StackPanel>

            <Button HorizontalAlignment="Right" Name="BtnLogin" Content="Авторизоваться" Click="BtnLogin_Click" Margin="5 30"/>

        </StackPanel>
    </Grid>
</Page>
